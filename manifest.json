{
  "manifest_version": 2,

  "name": "Authentification bibliothèque de l'Université Laval",
  "description": "Authentification rapide pour l'accès aux revues scientifiques de la bibliothèque de l'Université Laval",
  "version": "1.0",
  "background": {
    "scripts": ["add_ulaval.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Authentification Université Laval",
    "default_icon": "icon128.png",
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
              "128": "icon128.png" }
  },
  "permissions": [
   "activeTab"
   ]
}
